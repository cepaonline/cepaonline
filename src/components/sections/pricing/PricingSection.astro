---
// Import SecondaryCTA component for use in this module
import SecondaryCTA from "@components/ui/buttons/SecondaryCTA.astro";
import Icon from "@components/ui/icons/Icon.astro";

// Define props from Astro
const { pricing } = Astro?.props;

// Define TypeScript type for products?.
type Product = {
  name: string;
  description: string;
  price: string;
  cents: string;
  billingFrequency: string;
  features: Array<string>;
  purchaseBtnTitle: string;
  purchaseLink: string;
};

interface PricingSectionProps {
  title: string;
  subTitle: string;
  badge: string;
  thirdOption: string;
  btnText: string;
  pricing: {
    title: string;
    subTitle: string;
    starterKit: Product;
    professionalToolbox: Product;
  };
}
---

<section
  class="mx-auto max-w-[85rem] p-0 py-10 lg:px-8 lg:py-14 2xl:max-w-full"
>
  <!-- Section heading and sub-heading -->
  <div class="mx-auto mb-10 max-w-2xl text-center lg:mb-14">
    <h2
      class="text-balance text-2xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight"
    >
      {pricing?.title}
    </h2>
    <p class="mt-1 text-pretty text-neutral-600 dark:text-neutral-400">
      {pricing?.subTitle}
    </p>
  </div>
  <!-- Contains two main product blocks -->
  <div class="flex flex-wrap items-center justify-center gap-4 sm:gap-0">
    <!-- Starter Kit product details -->
    <div
      class="w-full rounded-xl bg-gray-800 p-6 sm:w-1/2 sm:rounded-r-none sm:p-8 lg:w-1/3"
    >
      <div class="mb-2">
        <h3 class="text-xl font-bold text-neutral-100">
          {pricing?.starterKit?.name}
        </h3>
        <p class="text-indigo-300 text-sm">{pricing?.starterKit?.description}</p>
      </div>
      <div class="mb-2">
        <span class="text-2xl font-bold text-neutral-200"
          >{pricing?.starterKit?.price}</span
        >
        <span class="text-md font-bold text-neutral-300"
          >{pricing?.starterKit?.cents}</span
        >
        <span class="ms-3 text-sm text-indigo-200"
          >{pricing?.starterKit?.billingFrequency}</span
        >
      </div>
      <!-- Features list - automatically created by mapping over `features` array -->
      <ul class="mb-4 space-y-2 text-neutral-300 text-sm">
        {
          pricing?.starterKit?.features?.map((feature: string) => (
            <li class="flex items-center gap-2">
              <Icon name="checkCircle" />
              <span>{feature}</span>
            </li>
          ))
        }
      </ul>

      <div class="mb-2">
        <span class="text-2xl font-bold text-neutral-200">70.000</span>
        <span class="text-md font-bold text-neutral-300">.00</span>
        <span class="ms-3 text-sm text-indigo-200">CLP / Anual</span>
      </div>

      <ul class="mb-6 space-y-2 text-neutral-300 text-sm">
        <li class="flex items-center gap-2">
          <Icon name="checkCircle" />
          <span>Incluye todo lo del plan mensual</span>
        </li>
        <li class="flex items-center gap-2">
          <Icon name="checkCircle" />
          <div class="flex flex-col">
            <span>Certificación oficial</span>
            <span class="text-xs">(Promoción por tiempo limitado)</span>
          </div>
          
          
        </li>
      </ul>
      <!-- CTA for purchasing the product -->
      <a
        href={pricing?.starterKit?.purchaseLink}
        class="block rounded-lg bg-gray-500 px-8 py-3 text-center text-sm font-bold text-gray-100 outline-none ring-indigo-300 transition duration-100 hover:bg-gray-600 focus-visible:ring active:text-gray-300 md:text-base"
        >{pricing?.starterKit?.purchaseBtnTitle}</a
      >
    </div>
    <!-- Professional Toolbox product details -->
    <div
      class="w-full lg:w-1/3 rounded-xl bg-gradient-to-tr from-[#0c948a] to-[#2dd0c3] p-6 shadow-xl sm:w-1/2 sm:p-8"
    >
      <div
        class="mb-4 flex flex-col items-start justify-between gap-4 lg:flex-row"
      >
        <div>
          <h3 class="text-2xl font-bold text-neutral-100 sm:text-3xl">
            {pricing?.professionalToolbox?.name}
          </h3>
          <p class="text-primary-200">{pricing?.professionalToolbox?.description}</p>
        </div>

        <span
          class="order-first inline-block rounded-full bg-primary-200 bg-opacity-50 px-3 py-1 text-xs font-bold uppercase tracking-wider text-center text-primary-600 lg:order-none"
          >{pricing?.badge}</span
        >
      </div>

      <div class="mb-4">
        <span class="text-6xl font-bold text-neutral-200"
          >{pricing?.professionalToolbox?.price}</span
        >
        <span class="text-lg font-bold text-primary-100"
          >{pricing?.professionalToolbox?.cents}</span
        >
        <span class="ms-3 text-primary-200"
          >{pricing?.professionalToolbox?.billingFrequency}</span
        >
      </div>
      <!-- Features list - automatically created by mapping over `features` array -->
      <ul class="mb-6 space-y-2 text-primary-100">
        {
          pricing?.professionalToolbox?.features?.map((feature: string) => (
            <li class="flex items-center gap-2">
              <Icon name="checkCircle" />

              <span>{feature}</span>
            </li>
          ))
        }
      </ul>
      <!-- CTA for purchasing the product -->
      <a
        href={pricing?.professionalToolbox?.purchaseLink}
        class="block rounded-lg bg-primary-200 bg-opacity-50 px-8 py-3 text-center text-sm font-bold text-neutral-100 outline-none ring-primary-300 transition duration-100 hover:bg-primary-300 hover:bg-opacity-50 focus-visible:ring active:bg-primary-400 md:text-base"
        >{pricing?.professionalToolbox?.purchaseBtnTitle}</a
      >
    </div>

    <div
    class="w-full rounded-xl bg-indigo-600 p-6 sm:w-1/2 sm:rounded-l-none sm:p-8 lg:w-1/3"
  >
    <div class="mb-4">
      <h3 class="text-2xl font-bold text-neutral-100 sm:text-3xl">
        {pricing?.certification?.name}
      </h3>
      <p class="text-indigo-300">{pricing?.certification?.description}</p>
    </div>

    <div class="mb-4">
      <span class="text-4xl font-bold text-neutral-200"
        >{pricing?.certification?.price}</span
      >
      <span class="text-lg font-bold text-neutral-300"
        >{pricing?.certification?.cents}</span
      >
      <span class="ms-3 text-sm text-indigo-200"
        >{pricing?.certification?.billingFrequency}</span
      >
    </div>
    <!-- Features list - automatically created by mapping over `features` array -->
    <ul class="mb-6 space-y-2 text-neutral-300">
      {
        pricing?.certification?.features?.map((feature: string) => (
          <li class="flex items-center gap-2">
            <Icon name="checkCircle" />

            <span>{feature}</span>
          </li>
        ))
      }
    </ul>
    <!-- CTA for purchasing the product -->
    <a
      href={pricing?.certification?.purchaseLink}
      class="block rounded-lg bg-indigo-200 bg-opacity-50 px-8 py-3 text-center text-sm font-bold text-gray-100 outline-none ring-indigo-300 transition duration-100 hover:bg-gray-600 focus-visible:ring active:text-gray-300 md:text-base"
      >{pricing?.certification?.purchaseBtnTitle}</a
    >
  </div>
  </div>
  <!-- Call to action for Enterprise Solutions -->
  <div class="mt-8 flex items-center justify-center gap-x-3 md:mt-12">
    <p class="text-sm text-neutral-600 dark:text-neutral-400">
      {pricing?.thirdOption}
    </p>

    <SecondaryCTA title={pricing?.btnText} url="/contact" />
  </div>
</section>
